doctype
html(
  lang="en"
  )

  head

    meta(
      http-equiv="X-UA-Compatible",
      content="IE=edge,chrome=1"
      )
    meta(
      charset="utf-8"
      )
    meta(
      http-equiv="Cache-Control",
      content="no-cache, no-store, must-revalidate"
      )
    meta(
      http-equiv="Pragma",
      content="no-cache"
      )
    meta(
      http-equiv="Expires",
      content="0"
      )
    meta(
      name="viewport",
      content="width=960"
      )
    meta(
      name="format-detection",
      content="telephone=no"
      )
    meta(
      name="google",
      content="notranslate"
      )
    title

    script.
      (function(a){if(/msie|trident/i.test(a)){a=a.match(/(?:msie |rv:)(\d+(\.\d+)?)/i);a=parseInt(a&&1<a.length&&a[1]||"",10);for(var c=["eq-ie"],b=6;12>=b;b++)a>b?c.push("gt-ie"+b):a<b?c.push("lt-ie"+b):a===b&&(c.push("lte-ie"+b),c.push("eq-ie"+b),c.push("gte-ie"+b));document.documentElement.className+=" "+c.join(" ")}})(navigator.userAgent||"");

    link(
      rel="stylesheet",
      href="css/styles.css"
      )

    <!--[if (gte IE 6)&(lte IE 8)]>
    script(
      src="//cdn.jsdelivr.net/g/nwmatcher@1.2.5,selectivizr@1.0.3b"
      )
    <![endif]-->

    script(
      src="//cdn.jsdelivr.net/g/jquery@1.11.0,lodash@2.4.1(lodash.compat.min.js),parseuri@1.2.2"
      )
    //- script(
      src="js/libs.js"
      )
    //- script(
      src="js/app.js"
      )

  body
    .page-wrapper
      .page-header
      .page-content
        block content
      .page-footer

    if dev
      script.
        location.hostname === 'localhost' && document.write('\x3Cscript src="//' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1">\x3C/script>');
