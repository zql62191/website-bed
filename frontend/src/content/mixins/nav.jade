mixin nav(ordinal)
  if(site.nav[ordinal])
    ul(class='#{ordinal}-nav')
      each val in site.nav[ordinal]
        - var brCount = val.title.match(/<\/?br[^>]*>/ig) ? val.title.match(/<\/?br[^>]*>/ig).length + 1 : 1;
        - var target = val.target || '_self';
        if val.subnav
          li(class='#{ordinal}-nav__item _#{brCount}_liner #{ordinal}-nav__item--subnav')
            a(href='#{val.url}',target='#{target}')
              | !{val.title}
            mixin nav(val.subnav)
        else
          li(class='#{ordinal}-nav__item _#{brCount}_liner')
            a(href='#{val.url}',target='#{target}')
              | !{val.title}
