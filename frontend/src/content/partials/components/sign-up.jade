div(data-direction='right', ng-controller='OptInController').signup-container.slideout.slideout--signup
  .slideout__inner
    .close

    h2.
      Sign up to instantly receive the #[br.hide--desktop]#[br.hide--mobile]#[em DSM-5]#[sup ®] diagnostic criteria for Binge Eating Disorder and other BED content from Shire.

    p.required-fields.
      #[span.blue #[em All fields are required in the below form]]

    form(
      name='bed_form',
      id='bed_form',
      ng-submit="optIn()",
      autocomplete='off',
      novalidate)
      input(
        type='text',
        name='firstName',
        placeholder='First Name',
        ng-model='form.fname',
        ng-required='true',
        ng-class="{forminvalid: (bed_form.firstName.$invalid && bed_form.firstName.$dirty) || (bed_form.firstName.$invalid && invalidform)}",
        class='first-name')

