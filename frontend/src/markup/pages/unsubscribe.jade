---
title: "Unsubscribe"
description: ""
keywords: ""
---

extends /layouts/base.jade

//- append analytics
    :raw

block content

    include /mixins/forms.jade


    .gradient

    header.header--unsubscribe
        .wrap--content

    section.section--unsubscribe(ng-controller="unsubController")
        .wrap--content
            .subcontainer

                h1.heading--1 Unsubscribe

                h2.heading--2 To unsubscribe from future communications, please select an option below, fill in the required fields, and click SUBMIT.

                +accordion(undefined,true)
                    mixin header
                        .accordion-title
                            | I would like to opt out of future !{BED} e-mail communications
                            .arrow.closed
                    mixin content
                        .formContainer
                            form(name='optOutEmail', autocomplete='off', novalidate)
                                input(type='email', name="name", placeholder="E-mail", ng-model='user.email', required)
                                span.errorMsg(ng-if="submitted && (optOutEmail.email.$error.email || submitted.email.$error.required)")
                                    | Please enter e-mail address
                                button(type="submit", ng-click="submitForm()").btn.btn--yellow
                                    | SUBMIT
                                
                +accordion(undefined,true)
                    mixin header
                        .accordion-title
                            | I would like to opt out of future !{BED} direct mail communications
                            .arrow.closed
                    mixin content
                        .formContainer
                            form(name='optOutDirectMail', ng-submit="submitForm()", autocomplete='off', novalidate).directMail
                                input(type='email', placeholder="E-mail", ng-model='email', ng-pattern="emailPattern",required, ng-class="{forminvalid: (opt-out-direct-mail.email.$invalid && opt-out-direct-mail.email.$dirty) || (opt-out-direct-mail.email.$invalid && invalidform)}")
                                input(type='text', placeholder="First Name", ng-model='firstName', required, ng-class="{forminvalid: (opt-out-direct-mail.firstName.$invalid && opt-out-direct-mail.firstName.$dirty) || (opt-out-direct-mail.firstName.$invalid && invalidform)}")
                                input(type='text', placeholder="Last Name", ng-model='lastname', required, ng-class="{forminvalid: (opt-out-direct-mail.lastName.$invalid && opt-out-direct-mail.firstName.$dirty) || (opt-out-direct-mail.lastName.$invalid && invalidform)}")
                                input(type='text', placeholder="Street Address", ng-model='address', required, ng-class="{forminvalid: (opt-out-direct-mail.address.$invalid && opt-out-direct-mail.address.$dirty) || (opt-out-direct-mail.address.$invalid && invalidform)}")
                                input(type='text', placeholder="Suite/Office (not required)", ng-model='suite', required, ng-class="{forminvalid: (opt-out-direct-mail.suite.$invalid && opt-out-direct-mail.suite.$dirty) || (opt-out-direct-mail.suite.$invalid && invalidform)}")
                                input(type='text', placeholder="City", ng-model='city', required, ng-class="{forminvalid: (opt-out-direct-mail.city.$invalid && opt-out-direct-mail.city.$dirty) || (opt-out-direct-mail.city.$invalid && invalidform)}")
                                select(type='text', placeholder="State", ng-model='state', required, ng-class="{forminvalid: (opt-out-direct-mail.state.$invalid && opt-out-direct-mail.state.$dirty) || (opt-out-direct-mail.state.$invalid && invalidform)}")
                                    +states
                                input(type='text', placeholder="Zip", ng-model='zip', required, ng-class="{forminvalid: (opt-out-direct-mail.zip.$invalid && opt-out-direct-mail.zip.$dirty) || (opt-out-direct-mail.zip.$invalid && invalidform)}")

                                button(type='submit').btn.btn--yellow
                                    | SUBMIT


                +accordion(undefined,true)
                    mixin header
                        .accordion-title
                            | I would like to opt out of all future Shire communications
                            .arrow.closed
                    mixin content
                        .formContainer
                            form(name='optOutAll', ng-submit="submitForm()", autocomplete='off', novalidate)
                                input(type='email', placeholder="E-mail", ng-model='email', required, ng-class="{forminvalid: (opt-out-all.email.$invalid && opt-out-all.email.$dirty) || (opt-out-all.email.$invalid && invalidform)}")
                                input(type='text', placeholder="First Name", ng-model='firstName', required, ng-class="{forminvalid: (opt-out-all.firstName.$invalid && opt-out-all.firstName.$dirty) || (opt-out-all.firstName.$invalid && invalidform)}")
                                input(type='text', placeholder="Last Name", ng-model='lastname', required, ng-class="{forminvalid: (opt-out-all.lastName.$invalid && opt-out-all.firstName.$dirty) || (opt-out-all.lastName.$invalid && invalidform)}")
                                input(type='text', placeholder="Street Address", ng-model='address', required, ng-class="{forminvalid: (opt-out-all.address.$invalid && opt-out-all.address.$dirty) || (opt-out-all.address.$invalid && invalidform)}")
                                input(type='text', placeholder="Suite/Office (not required)", ng-model='suite', required, ng-class="{forminvalid: (opt-out-all.suite.$invalid && opt-out-all.suite.$dirty) || (opt-out-all.suite.$invalid && invalidform)}")
                                input(type='text', placeholder="City", ng-model='city', required, ng-class="{forminvalid: (opt-out-all.city.$invalid && opt-out-all.city.$dirty) || (opt-out-all.city.$invalid && invalidform)}")
                                select(type='text', placeholder="State", ng-model='state', required, ng-class="{forminvalid: (opt-out-all.state.$invalid && opt-out-all.state.$dirty) || (opt-out-all.state.$invalid && invalidform)}")
                                    +states
                                input(type='text', placeholder="Zip", ng-model='zip', required, ng-class="{forminvalid: (opt-out-all.zip.$invalid && opt-out-all.zip.$dirty) || (opt-out-all.zip.$invalid && invalidform)}")

                                button(type='submit').btn.btn--yellow
                                    | SUBMIT

                //- .box(ng-click="openBox(3)")
                    .text I would like to opt out of all future Shire communications
                    .arrow.closed
                    .formContainer.ng-hide
                        | hello sir. my name is form 3


    footer.footer--unsubscribe
        .wrap--content
