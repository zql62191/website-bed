extends /layouts/base.jade

//- append analytics
    :raw

block content

    header.header--page
        .wrap--content
            h1.heading--1
                | Sign up to instantly receive the 
                em DSM-5
                    sup &reg; 
                | diagnostic criteria for binge eating disorder (B.E.D.) and future B.E.D. content from Shire.

    section.section--page
        .wrap--content
            form(name='opt-in', ng-submit="optIn()", autocomplete='off', novalidate)
                input(type='text', placeholder="First Name", ng-model='firstName', ng-required="true", ng-class="{forminvalid: (opt-in.firstName.$invalid && opt-in.firstName.$dirty) || (opt-in.firstName.$invalid && invalidform)}")
                input(type='text', placeholder="Last Name", ng-model='lastname', ng-required="true", ng-class="{forminvalid: (opt-in.lastName.$invalid && opt-in.firstName.$dirty) || (opt-in.lastName.$invalid && invalidform)}")
                input(type='email', placeholder="E-mail", ng-model='email', ng-required="true", ng-class="{forminvalid: (opt-in.email.$invalid && opt-in.email.$dirty) || (opt-in.email.$invalid && invalidform)}")
                input(type='email', placeholder="Confirm E-mail", ng-model='confirmemail', ng-required="true", ng-class="{forminvalid: (opt-in.confirmEmail.$invalid && opt-in.confirmEmail.$dirty) || (opt-in.confirmEmail.$invalid && invalidform) || ($value!=opt-in.email.value)}")

                h2.heading--2
                    | Opt In for Communications

                p.info
                    input(type='checkbox', value='', ng-required="true") 
                    |  By checking this box and clicking SUBMIT, you certify that you are a US health care professional and you are opting to receive information about binge eating disorder plus site updates, educational information, patient support resources, and other information from Shire. You will be able to opt out of these communications at any time.
                p.info 
                    | Shire respects your personal information. All information you have provided will be kept confidential and will not be used or distributed to anyone for any purpose other than what is explained in our Privacy Policy Statement. We encourage you to read our Privacy Policy Statement by clicking on this link: 
                    a(href='/hcp/privacy-policy.aspx').
                        Review Shire Privacy 
                    a(href='/hcp/privacy-policy.aspx').    
                        Policy Statement. 
                    | &nbsp;This consent will be in effect until such time as you opt out of the program.


                a(href='/hcp/thank-you.aspx').btn.btn--yellow
                    | SUBMIT

    footer.footer--page
        .wrap--content
